    name = "rust_deps",
    cargo_toml_files = ["//:Cargo.toml"],
    supported_targets = [
        "x86_64-apple-darwin",
        "x86_64-unknown-linux-gnu",
    ],
)

load("@rust_deps//:defs.bzl", "pinned_rust_install")

