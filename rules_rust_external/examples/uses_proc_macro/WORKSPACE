    name = "io_bazel_rules_rust",
    path = "../../..",
)

load("@io_bazel_rules_rust//rust:repositories.bzl", "rust_repositories")

rust_repositories()

load(
    "@rules_rust_external//:workspace.bzl",
    "crate",
    "crate_universe",
)

